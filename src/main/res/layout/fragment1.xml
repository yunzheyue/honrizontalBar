<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.app8.MySwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.app8.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="2332352" />

                <com.example.app8.MyBarChartView
                    android:id="@+id/mybarCharView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:bar_color="#f9e5c9"
                    app:bottom_line_color="#ededed"
                    app:bottom_text_color="#939393"
                    app:top_text_color="#939393" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="2332352" />

                <com.example.app8.MyBarChartView
                    android:id="@+id/mybarCharView1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:bar_color="#f9e5c9"
                    app:bottom_line_color="#ededed"
                    app:bottom_text_color="#939393"
                    app:top_text_color="#939393" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="2332352" />

                <com.example.app8.MyBarChartView
                    android:id="@+id/mybarCharView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:bar_color="#f9e5c9"
                    app:bottom_line_color="#ededed"
                    app:bottom_text_color="#939393"
                    app:top_text_color="#939393" />
            </LinearLayout>


        </com.example.app8.MyScrollView>
    </com.example.app8.MySwipeRefreshLayout>




</LinearLayout>